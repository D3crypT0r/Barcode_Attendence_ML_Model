    <h2 class="common-style">This is heading 2</h2> <!-- .common-style class -->
    <p class="common-style">This is a paragraph with some text.</p> <!-- .common-style class -->
    <div class="common-style">This is a div with some content.</div> <!-- .common-style class -->
    <span class="common-style">This is a span element.</span> <!-- .common-style class -->
</body>
</html>

.common-style {
    color: blue;               
    font-size: 20px;           
    font-family: Arial, sans-serif;
    margin: 10px;              
    padding: 5px;              
    border: 1px solid gray;    
}

